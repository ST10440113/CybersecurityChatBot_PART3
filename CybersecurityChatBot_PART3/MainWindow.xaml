<Window x:Class="CybersecurityChatBot_PART3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CybersecurityChatBot_PART3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">
    <Grid>
        <!--Column Layout: Sidebar and Content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#2C3E50" VerticalAlignment="Stretch" Grid.Column="0">
            <TextBlock Text="Cybersecurity Chatbot" Foreground="White"  FontSize="25" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,40"/>

            <Button Content="Home" Click="GoToHome_Click" Margin="10" Padding="10" Background="#34495E" Foreground="White" BorderThickness="0" Cursor="Hand"/>

            <Button Content="Chat Bot" Click="GoToChatPage_Click" Margin="10" Padding="10" Background="#34495E" Foreground="White" BorderThickness="0" Cursor="Hand"/>

            <Button Content="Activity Log" Click="GoToLogPage_Click" Margin="10" Padding="10" Background="#34495E" Foreground="White" BorderThickness="0" Cursor="Hand"/>

            <Button Content="Take Quiz" Click="GoToQuizPage_Click" Margin="10" Padding="10" Background="#34495E" Foreground="White" BorderThickness="0" Cursor="Hand"/>

            <Button Content="Tasks" Click="GoToTaskPage_Click" Margin="10" Padding="10" Background="#34495E" Foreground="White" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>

        <!--Page Container-->
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>

