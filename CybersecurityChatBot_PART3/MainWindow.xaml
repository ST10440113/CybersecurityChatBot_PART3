<Window x:Class="CybersecurityChatBot_PART3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CybersecurityChatBot_PART3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>


        <!-- This is the chatbot   -->
        <ListBox x:Name="ChatBox" Grid.Row="0" FontFamily="Consolas" FontSize="14" Margin="0,0,0,10" 
        Background="#1e1e1e"  Foreground="White" BorderBrush="Gray" BorderThickness="1"/>


        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox x:Name="UserInput"  Width="450"  Height="30" Margin="0,0,10,0"/>
            <Button Content="Send"  Width="100" Height="30" Click="Send_Click"/>
        </StackPanel>

    </Grid>
</Window>

