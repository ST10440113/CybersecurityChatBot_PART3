<Page x:Class="CybersecurityChatBot_PART3.Pages.QuizPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CybersecurityChatBot_PART3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1400"
      Title="QuizPage">

    <Canvas Name="myCanvas" Background="CornflowerBlue">

        <Label Name="scoreText" FontSize="18" FontWeight="Bold">Quiz Score: 0/10</Label>



        <TextBlock Name="txtQuestion" FontSize="20" FontWeight="Bold" Canvas.Left="353" Canvas.Top="114"
                   TextWrapping="Wrap" Width="572" TextAlignment="Center" Padding="3"> 
            Welcome to the Cybersecurity Awareness Quiz</TextBlock>

        <Button Background="LightBlue" Name="ans1" FontSize="16" Content="Answer 1" Tag="0" Canvas.Left="27" Canvas.Top="240" Width="600" Height="90" Click="checkAnswer" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button Background="LightBlue" Name="ans2" FontSize="16" Content="Answer 2" Tag="0" Canvas.Left="27" Canvas.Top="369" Width="600" Height="90" Click="checkAnswer" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Button Background="LightBlue" Name="ans3" FontSize="16" Content="Answer 3" Tag="0" Canvas.Left="661" Canvas.Top="240" Width="600" Height="90" Click="checkAnswer" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Button Background="LightBlue" Name="ans4" FontSize="16" Content="Answer 4" Tag="0" Canvas.Left="661" Canvas.Top="369" Width="600" Height="90" Click="checkAnswer" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Canvas>
</Page>
